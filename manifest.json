{
  "manifest_version": 3,
  "name": "Google Messages Scraper",
  "version": "0.0.1",
  "description": "Scrapes Google Messages and sends data to API",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://messages.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://messages.google.com/*"
      ],
      "js": [
        "config.js",
        "parser.js",
        "api.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Google Messages Scraper",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}